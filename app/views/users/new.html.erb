<h2>Register for an account</h2>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>